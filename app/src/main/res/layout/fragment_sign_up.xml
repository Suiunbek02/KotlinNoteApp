<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".ui.fragments.signup.SignUpFragment">


    <ImageView
        android:id="@+id/phone"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/image"
        app:layout_constraintStart_toStartOf="@id/login_et"
        app:layout_constraintTop_toTopOf="@id/login_et"
        app:layout_constraintBottom_toBottomOf="@id/login_et"
        android:layout_marginStart="15dp"/>

    <ImageView
        android:id="@+id/email"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/emailicon"
        app:layout_constraintStart_toStartOf="@id/password_et1"
        app:layout_constraintTop_toTopOf="@id/password_et1"
        app:layout_constraintBottom_toBottomOf="@id/password_et1"
        android:layout_marginStart="18dp"/>

    <ImageView
        android:id="@+id/login_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/notes1"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/login_et"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext"
        android:paddingVertical="13dp"
        android:textColor="@color/white"
        android:paddingStart="50dp"
        android:paddingEnd="13dp"
        android:hint="+996 707 777 777"
        android:textColorHint="@color/gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/password_et1"
        android:layout_width="350dp"
        android:background="@drawable/edittext"
        android:paddingVertical="13dp"
        android:paddingStart="50dp"
        android:paddingEnd="13dp"
        android:hint="Ваш код"
        android:textColorHint="@color/gray"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_et"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/password_btn"
        android:layout_width="250dp"
        app:cornerRadius="150dp"
        android:hint="Получить код"
        android:backgroundTint="@color/DarkOrange"
        android:textColorHint="@color/white"
        android:textSize="18sp"
        android:padding="17sp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/password_et1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="35dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Отправить снова"
        android:textColor="@color/DarkOrange"
        app:layout_constraintTop_toBottomOf="@id/password_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Регистрация по номеру"
        android:textSize="20sp"
        android:textColor="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/login_img"
        app:layout_constraintBottom_toTopOf="@id/login_et"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>