<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.onboard.main.MainOnBoardFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/pagerCodImage"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal"
        app:lottie_fileName="anim.technology.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>


    <TextView
        android:id="@+id/pagerText"
        android:textSize="20sp"
        android:text="@string/очень"
        android:layout_marginTop="100dp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_gravity="center|center_horizontal"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:id="@+id/pagerText1"
        android:textSize="25sp"
        tools:text="Начать работу"
        android:layout_marginTop="160dp"
        android:textStyle="bold"
        android:textColor="@color/gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_gravity="center|center_horizontal"
        android:layout_marginEnd="15dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_back"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="end"
        android:textColor="@color/DarkOrange"
        android:textSize="20sp"
        android:text="@string/back" />
</FrameLayout>